{
	"name": "ts-boilerplate",
	"version": "1.0.0",
	"description": "An Updated Typescript Boilerplate with Linting, Testing, and Building!",
	"type": "module",
	"main": "index.js",
	"scripts": {
		"dev": "tsx watch src/app.ts",
		"test": "vitest",
		"test:watch": "vitest -w",
		"lint": "biome check --write ./src/",
		"build": "tsc -p tsconfig.json",
		"build:watch": "tsc -w -p tsconfig.json"
	},
	"keywords": [],
	"author": "Pedro Reves",
	"license": "Apache-2.0",
	"devDependencies": {
		"@biomejs/biome": "1.8.3",
		"@types/node": "^20.14.9",
		"tsx": "^4.16.0",
		"typescript": "^5.5.2",
		"vitest": "^1.6.0"
	}
}
